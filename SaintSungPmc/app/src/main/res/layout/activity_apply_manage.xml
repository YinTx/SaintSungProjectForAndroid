<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200"
    tools:context="com.saintsung.saintsungpmc.activity.ApplyManageActivity">
    <include layout="@layout/lay_top"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/apply_scrap"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/len_16"
        android:textColor="@color/black_alpha_112"
        />
        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_marginRight="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_direction_right"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/len_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/apply_recovery"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_16"
            android:textColor="@color/black_alpha_112"
            />
        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_marginRight="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_direction_right"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/len_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/apply_replace"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_16"
            android:textColor="@color/black_alpha_112"
            />
        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_marginRight="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_direction_right"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/len_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/apply_newdress"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_16"
            android:textColor="@color/black_alpha_112"
            />
        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_marginRight="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_direction_right"
            />
    </LinearLayout>
</LinearLayout>
