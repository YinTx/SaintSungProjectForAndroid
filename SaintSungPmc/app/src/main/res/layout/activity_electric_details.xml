<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saintsung.saintsungpmc.activity.ElectricDetailsActivity">

    <include layout="@layout/lay_top" />

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_242"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/len_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_line"
            android:orientation="vertical"
            android:paddingLeft="@dimen/len_10">

            <LinearLayout
                android:layout_marginTop="@dimen/len_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_name"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_type"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_number"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/len_4"
                    android:layout_height="wrap_content"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_phone"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_address"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/len_4"
                    android:layout_height="wrap_content"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_meter"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="文本" />
            </LinearLayout>
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saint_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:gravity="center"
                    android:text="@string/electricdetails_state"
                    android:textAppearance="@style/thirdLevelBlackText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/len_4"
                    android:layout_height="wrap_content"
                    android:text="文本" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:layout_marginRight="@dimen/len_16"
                    android:src="@drawable/ic_electric_edit"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
