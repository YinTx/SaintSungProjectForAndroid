<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saintsung.saintsungpmc.activity.LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_242"
        android:background="@mipmap/ic_login_top"
        app:elevation="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4"

            >
            <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/len_4"
                android:layout_width="@dimen/len_128"
                android:layout_height="@dimen/len_128"
                android:background="@drawable/img_round"
                android:src="@drawable/ic_"
                />
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:layout_marginRight="@dimen/len_24"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginTop="@dimen/len_32"
        android:gravity="center"
        >
    <ImageView
        android:layout_width="@dimen/len_24"
        android:layout_height="@dimen/len_24"
        android:src="@mipmap/ic_login_user"
        />
    <EditText
        android:id="@+id/userNameText"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/login_user_hint"
        android:textColorHint="@color/second_level_black"
        android:textSize="@dimen/len_14"
        android:textColor="@color/second_level_black"
        android:background="@null"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/IconSelected"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginRight="@dimen/len_24"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:layout_marginRight="@dimen/len_24"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginTop="@dimen/len_20"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:src="@mipmap/ic_login_pas"
            />
        <EditText
            android:id="@+id/passWordText"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="@string/login_pass_hint"
            android:textSize="@dimen/len_14"
            android:textColorHint="@color/second_level_black"
            android:textColor="@color/second_level_black"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/IconSelected"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginRight="@dimen/len_24"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/len_36"
        android:layout_height="@dimen/len_52"
        android:text="@string/Login"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginRight="@dimen/len_24"
        android:textSize="@dimen/font_18"
        android:background="@color/IconSelected"
        />
    <TextView
        android:id="@+id/setPort"
        android:layout_marginTop="@dimen/len_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login_port"
        android:textColor="@color/saint_red"
        android:textSize="@dimen/font_14"
        android:gravity="center"
        />
</LinearLayout>
