<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.saintsung.saintsungpmc.activity.PersonalActivity">

    <include layout="@layout/lay_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_72"
        android:layout_marginLeft="@dimen/len_14"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/personal_portrait"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_60"
            android:layout_height="@dimen/len_60"
            android:layout_marginRight="@dimen/len_36" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:layout_marginTop="@dimen/len_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_message"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_map"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:layout_marginTop="@dimen/len_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_factorymodel"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:id="@+id/personal_accountsecurity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_accountsecurity"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_clean"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_weight="1"
            android:text="@string/personal_about"
            android:textAppearance="@style/thirdLevelBlackText" />

        <ImageView
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginRight="@dimen/len_36"
            android:src="@drawable/ic_direction_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />

    <Button
        android:id="@+id/personal_out"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/personal_singout"
        android:textColor="@color/saint_red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />
</LinearLayout>
