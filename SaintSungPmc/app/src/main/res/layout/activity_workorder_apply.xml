<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    tools:context="com.saintsung.saintsungpmc.activity.WorkOrderApplyActivity">

    <include layout="@layout/lay_top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_32"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/len_10"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workorder_electric_number"
            android:textAppearance="@style/thirdLevelBlackText" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_6"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black_alpha_112" />

        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_marginRight="@dimen/len_8"
            android:src="@drawable/ic_qr_code" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:background="@color/grey_100" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_32"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textAppearance="@style/thirdLevelBlackText" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_20"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black_alpha_112" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"
            android:background="@color/grey_100" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_32"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_time"
            android:textAppearance="@style/thirdLevelBlackText" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_20"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black_alpha_112" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_60"
        android:background="@color/grey_100" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:background="@color/white"
        android:text="@string/submit_apply"
        android:textAppearance="@style/thirdLevelBlackText" />
</LinearLayout>
