<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_connect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_32"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@style/thirdLevelGreyText"
            />

        <TextView
            android:id="@+id/txt_mac"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@style/thirdLevelGreyText"
            />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/len_16"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_direction_right" />
    </LinearLayout>


</LinearLayout>