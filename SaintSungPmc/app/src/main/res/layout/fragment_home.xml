<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        app:elevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <com.saintsung.common.widget.PortraitView
                android:id="@+id/img_portrait"
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="end|top"
                android:layout_margin="@dimen/len_4"
                android:foreground="@drawable/ic_touch_menu"
                android:padding="@dimen/len_4"
                android:scaleType="centerCrop"
                android:src="@drawable/default_portrait" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/len_56"
                    android:layout_height="@dimen/len_56"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:src="@drawable/ic_home_wifi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/len_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_mac_address"
                            android:layout_width="@dimen/len_100"
                            android:layout_height="wrap_content"
                            android:background="@drawable/fragment_line"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="@dimen/len_6"
                            android:text="未连接"
                            android:textAppearance="@style/secondLevelBlackText" />

                        <TextView
                            android:layout_width="@dimen/len_100"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/len_2"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="@dimen/len_6"
                            android:text="Mac地址"
                            android:textAppearance="@style/secondLevelBlackText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_signal"
                            android:layout_width="@dimen/len_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_6"
                            android:background="@drawable/fragment_line"
                            android:gravity="center_horizontal"
                            android:text="未连接"
                            android:textAppearance="@style/secondLevelBlackText" />
                        <TextView
                            android:layout_width="@dimen/len_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_6"
                            android:layout_marginTop="@dimen/len_2"
                            android:gravity="center_horizontal"
                            android:text="信号强弱"
                            android:textAppearance="@style/secondLevelBlackText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_10"
        android:background="@color/saint_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/len_10"
        android:paddingRight="@dimen/len_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="附近设备"
            android:textAppearance="@style/fifthLevelBlackText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备更新"
            android:textAppearance="@style/fifthLevelBlackText" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_166"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/len_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/len_6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_weight="1"
                    android:text="已授权设备名称"
                    android:textAppearance="@style/fourthLevelBlackText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_weight="1"
                    android:text="Mac地址"
                    android:textAppearance="@style/fourthLevelBlackText" />
            </LinearLayout>

            <ListView
                android:id="@+id/lst_authorized"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/len_10"
                android:layout_marginRight="@dimen/len_10" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:paddingLeft="@dimen/len_10"
        android:paddingRight="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实时操作信息"
            android:textAppearance="@style/fifthLevelBlackText" />

        <TextView
            android:id="@+id/dis_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开连接"
            android:textSize="@dimen/font_16"
            android:textColor="@color/saint_red"
            />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/len_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="操作记录"
                android:layout_margin="@dimen/len_10"
                android:textAppearance="@style/fourthLevelBlackText"
                />
            <TextView
                android:id="@+id/operation_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="10"
                android:textAppearance="@style/secondLevelGreykText"
                android:scrollbars="vertical"
                android:lineSpacingExtra="@dimen/len_8"
                android:layout_marginBottom="@dimen/len_2"
                android:layout_marginLeft="@dimen/len_10"
                android:layout_marginRight="@dimen/len_10">
            </TextView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- ListView、ScrollView、RecyclerView、Other 多种-->
        <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"></ListView>
    </com.baoyz.widget.PullRefreshLayout>
    <!--<Button-->
    <!--android:id="@+id/sendData"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="请求数据"--><!--/>-->
</LinearLayout>