<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/saint_gray"
    android:orientation="vertical">

    <include layout="@layout/lay_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_104"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_36"
                android:src="@drawable/ic_lockseal_grant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:text="@string/lockseal_grant" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_36"
                android:src="@drawable/ic_lockseal_grant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:text="@string/lockseal_ungrant" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_36"
                android:src="@drawable/ic_lockseal_grant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:text="@string/lockseal_apply" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_92"
        android:layout_marginTop="@dimen/len_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/len_8"
        android:paddingRight="@dimen/len_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:layout_marginTop="@dimen/len_14"
            android:gravity="center"
            android:text="@string/lockseal_grant"
            android:textColor="@color/black_alpha_112" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/len_8"
            app:cardElevation="@dimen/len_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fragment_line"
                android:paddingLeft="@dimen/len_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:layout_marginLeft="@dimen/len_10"
                    android:gravity="center"
                    android:text="@string/lockseal_electric"
                    android:textColor="@color/black_alpha_112" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="@dimen/len_92"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/len_8"
        android:paddingRight="@dimen/len_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:layout_marginTop="@dimen/len_14"
            android:gravity="center"
            android:text="@string/lockseal_grant"
            android:textColor="@color/black_alpha_112" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/len_8"
            app:cardElevation="@dimen/len_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fragment_line"
                android:paddingLeft="@dimen/len_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:layout_marginLeft="@dimen/len_10"
                    android:gravity="center"
                    android:text="@string/lockseal_electric"
                    android:textColor="@color/black_alpha_112" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_92"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/len_8"
        android:paddingRight="@dimen/len_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:layout_marginTop="@dimen/len_14"
            android:gravity="center"
            android:text="@string/lockseal_grant"
            android:textColor="@color/black_alpha_112" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/len_8"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/len_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fragment_line"
                android:paddingLeft="@dimen/len_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_24"
                    android:layout_marginLeft="@dimen/len_10"
                    android:gravity="center"
                    android:text="@string/lockseal_electric"
                    android:textColor="@color/black_alpha_112" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>